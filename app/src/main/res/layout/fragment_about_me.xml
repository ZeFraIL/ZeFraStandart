<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="30dp"
    android:background="#EFE8DF"
    tools:context=".AboutMeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/smartwolf"
        android:textSize="30dp"
        android:fontFamily="@font/pacifico"
        android:text="About me" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/wolf_6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/aboutme"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bCallMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call me"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/bSMSMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="SMS me" />

        <Button
            android:id="@+id/bMailMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mail me" />
    </LinearLayout>
</LinearLayout>